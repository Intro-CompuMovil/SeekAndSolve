        <item name="android:fontFamily">@font/lexend_font</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Estilo para los subtítulos -->
    <style name="SubtitleStyle">
        <item name="android:fontFamily">@font/lexend_font</item>
        <item name="android:textSize">20sp</item>
